{
    "info": {
        "_postman_id": "f1e2d3c4-b5a6-4987-8654-3210abcdef",
        "name": "Mercado Pago - E-Commerce API",
        "description": "Colección de endpoints para probar la integración con Mercado Pago en la API del E-Commerce.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "description": "Endpoints para registro y login. El login es necesario para obtener el token para crear una orden de pago.",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"nombre\": \"Comprador\",\n    \"apellido\": \"Prueba\",\n    \"email\": \"comprador.prueba@example.com\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Registra un nuevo usuario con el rol 'USER'."
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    pm.collectionVariables.set(\"jwt_token\", pm.response.json().token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"comprador.prueba@example.com\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Autentica un usuario y obtiene un token JWT. El token se guarda automáticamente en la variable de colección `jwt_token`."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Payments (Mercado Pago)",
            "description": "Endpoints para la integración con Mercado Pago. La creación de la orden inicia el flujo de pago.",
            "item": [
                {
                    "name": "Crear Orden de Pago (Checkout) [AUTENTICADO]",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"productos\": [\n        {\n            \"idProducto\": 1,\n            \"cantidad\": 1\n        },\n        {\n            \"idProducto\": 2,\n            \"cantidad\": 2\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/payments/create-order",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "payments",
                                "create-order"
                            ]
                        },
                        "description": "Inicia el proceso de compra. Registra una venta con estado 'PENDIENTE' y devuelve el 'init_point' de Mercado Pago para redirigir al usuario y completar el pago."
                    },
                    "response": []
                },
                {
                    "name": "Webhook (Notificación de Pago)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"action\": \"payment.created\",\n    \"api_version\": \"v1\",\n    \"data\": {\n        \"id\": \"123456789\"\n    },\n    \"date_created\": \"2024-05-21T15:04:03Z\",\n    \"id\": 987654321,\n    \"live_mode\": false,\n    \"type\": \"payment\",\n    \"user_id\": 12345\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/payments/webhook",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "payments",
                                "webhook"
                            ]
                        },
                        "description": "Endpoint para recibir notificaciones de Mercado Pago (ej. a través de ngrok). Actualiza el estado de la venta según el pago."
                    },
                    "response": []
                },
                {
                    "name": "Página de Éxito (Success)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/payments/success",
                            "host": [ "{{base_url}}" ],
                            "path": [ "payments", "success" ]
                        },
                        "description": "Página a la que Mercado Pago redirige al usuario tras un pago exitoso."
                    },
                    "response": []
                },
                {
                    "name": "Página de Fallo (Failure)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/payments/failure",
                            "host": [ "{{base_url}}" ],
                            "path": [ "payments", "failure" ]
                        },
                        "description": "Página a la que Mercado Pago redirige al usuario si el pago falla."
                    },
                    "response": []
                },
                {
                    "name": "Página de Pendiente (Pending)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/payments/pending",
                            "host": [ "{{base_url}}" ],
                            "path": [ "payments", "pending" ]
                        },
                        "description": "Página a la que Mercado Pago redirige al usuario si el pago queda pendiente (ej. pago en efectivo)."
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080/api",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string",
            "description": "Este token se actualiza automáticamente al hacer login."
        }
    ]
}