{
    "info": {
        "name": "Producto Imagenes",
        "description": "Coleccion de endpoints para gestionar imagenes de productos. Requiere rol ADMIN.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Subir Imagen y Asociar a Producto [ADMIN]",
            "request": {
                "method": "POST",
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{jwt_token}}",
                            "type": "string"
                        }
                    ]
                },
                "header": [],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "imagenes",
                            "type": "file",
                            "src": [
                                "C:/Users/windows/Desktop/PROYECTO_YACOMO/Backend/BackendE_Commerce/src/main/resources/images/producto_ejemplo.jpg"
                            ]
                        }
                    ]
                },
                "url": {
                    "raw": "{{base_url}}/producto-imagenes/upload/1",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "producto-imagenes",
                        "upload",
                        "1"
                    ]
                },
                "description": "Sube uno o mas archivos de imagen y los asocia al producto con el ID proporcionado."
            },
            "response": []
        },
        {
            "name": "Eliminar Imagen de Producto [ADMIN]",
            "request": {
                "method": "DELETE",
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{jwt_token}}",
                            "type": "string"
                        }
                    ]
                },
                "header": [],
                "url": {
                    "raw": "{{base_url}}/producto-imagenes/1/producto/1",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "producto-imagenes",
                        "1",
                        "producto",
                        "1"
                    ]
                },
                "description": "Elimina una imagen especifica (por su ID) de un producto (por su ID)."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "default"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "default"
        }
    ]
}
